<Window x:Class="mailboxWPF.SendMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mailboxWPF"
        mc:Ignorable="d"
        Title="SendMessageWindow" Height="450" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="249*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="10,10,9.6,10" Grid.Row="0" Grid.Column="1">
            <ComboBox Height="12" Margin="0,0,-0.4,0">
                <ComboBoxItem Content="ComboBox Item #1"/>
                <ComboBoxItem IsSelected="True" Content="ComboBox Item #2"/>
                <ComboBoxItem Content="ComboBox Item #3"/>
            </ComboBox>
        </StackPanel>

        <TextBox Margin="0,0,-0.4,0" Grid.Row="0" Grid.Column="0">Recipient</TextBox>
        <TextBox Margin="0,0,-0.4,0" Grid.Row="1" Grid.Column="0">Copy recipient</TextBox>
        <TextBox Margin="0,0,-0.4,0" Grid.Row="2" Grid.Column="0">Subject</TextBox>
        
        <TextBox Margin="0,0,-0.4,0" Grid.Row="4" Grid.Column="0">EMAIL CONTENT</TextBox>

        <Button Margin="10,2,10,0" Grid.Row="2" Grid.Column="1">Add atachement</Button>
        

        <ListBox Margin="0,0,-0.4,0" Grid.Row="4" Grid.Column="1">
            <ListBoxItem>dcscs</ListBoxItem>
        </ListBox>

        <Button Margin="10,10,10,10" Grid.Row="5" Grid.Column="1">Send</Button>
    </Grid>
</Window>
